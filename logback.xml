<configuration>
  <appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
     </pattern>
    </encoder>
  </appender>

  <logger name="com.ibm.wala" level="WARN"/>
  <logger name="org.scandroid.util.CGAnalysisContext" level="DEBUG"/>
  <logger name="org.scandroid.flow.functions.TaintTransferFunctions" level="DEBUG"/>

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>